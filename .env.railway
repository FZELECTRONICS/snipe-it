# Railway Deployment Configuration
# This file configures Snipe-IT for Railway.app deployment

# Application
APP_NAME="Snipe-IT"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-railway-domain.railway.app

# Application key (set by Railway, but you can override)
APP_KEY=base64:

# Timezone
APP_TIMEZONE=UTC

# Database (Railway provides PostgreSQL by default)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=snipe_db
DB_USERNAME=snipe
DB_PASSWORD=your_secure_password_here

# Cache (Railway provides Redis)
CACHE_DRIVER=redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Session
SESSION_DRIVER=cookie
SESSION_LIFETIME=129600

# Mail Configuration
MAIL_DRIVER=log
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@snipe.local
MAIL_FROM_NAME="Snipe-IT"

# File Uploads
APP_UPLOAD_MAX_FILESIZE=512M

# Security
ENFORCE_SSL=true
ALLOW_IFRAMES=false

# Optional: Backup
BACKUP_ENABLED=true
BACKUP_DISKS=local

# Optional: LDAP (disabled by default)
LDAP_ENABLED=false
LDAP_SERVER=
LDAP_BASEDN=
LDAP_USERNAME=
LDAP_PASSWORD=
